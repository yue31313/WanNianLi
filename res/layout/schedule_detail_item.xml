        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="12sp"
        android:text="2013-11-16  18:00" />
    
       <TextView
        android:id="@+id/itemContent"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
